<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Kailab Admin{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('bundles/kailabfrontend/favicon.ico') }}" />
        {% block javascripts %}
        {% javascripts 
            'bundles/kailabbackend/js/jquery.js'
            'bundles/stfalcontinymce/vendor/tiny_mce/jquery.tinymce.js'
        %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
        {% endblock %}

        {% block stylesheets %}
        {% stylesheets filter='cssrewrite'
            'bundles/kailabfrontend/css/layout.css'
            'bundles/kailabbackend/css/layout.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
        {% endstylesheets %}
        {% endblock %}
    </head>
    <body>
        <div id="body_wrapper">
            <div id="header_wrapper">
                <div id="header">
                <div id="logo">
                     <a href="{{ path('backend_homepage') }}">
                        <img src="{{ asset('bundles/kailabfrontend/images/logo.png') }}" alt="Kailab" title="Kailab"/>
                    </a>
                </div>
                <div id="user">
                    {% trans with {'%username%': app.user.username} %}
                    Logged in as %username%.
                    {% endtrans %}
                    <a href="{{ path('fos_user_security_logout') }}">{{ 'logout' | trans }}</a>
                </div>
            </div>
            <div id="main_wrapper">
                <div id="sidebar">
                    <ul>
                        <li><a href="{{ path('backend_slide_index') }}">{{ 'Slides' | trans }}</a></li>
                        <li><a href="{{ path('backend_screenshot_index') }}">{{ 'Screenshots' | trans }}</a></li>
                        <li><a href="{{ path('backend_app_index') }}">{{ 'Appliactions' | trans }}</a></li>
                        <li><a href="{{ path('backend_tech_index') }}">{{ 'Technologies' | trans }}</a></li>
                        <li><a href="{{ path('backend_platform_index') }}">{{ 'Platforms' | trans }}</a></li>
                        <li><a href="{{ path('backend_question_index') }}">{{ 'Questions' | trans }}</a></li>
                        <li><a href="{{ path('backend_user_index') }}">{{ 'Users' | trans }}</a></li>
                        <li><div class="section_title">{{ 'Blog' | trans }}</div>
                            <ul>
                                <li><a href="{{ path('backend_blog_post_index') }}">{{ 'Posts' | trans }}</a></li>
                                <li><a href="{{ path('backend_blog_category_index') }}">{{ 'Categories' | trans }}</a></li>
                                <li><a href="{{ path('backend_blog_comment_index') }}">{{ 'Comments' | trans }}</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div id="main_with_sidebar">
                    <div id="main_gradient">
                        <div id="main">
                            <div id="main_inner">
                                {% block content %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="footer_wrapper">
                <div id="footer">
                {% block footer %}
                {% endblock %}
                </div>
            </div>
        </div>
        {{ tinymce_init() }}
    </body>
</html>


