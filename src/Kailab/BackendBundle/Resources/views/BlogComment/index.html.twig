{% extends "KailabBackendBundle::index.html.twig" %}

{% block content_title %}
{{ 'Blog Comments' | trans }}
{% endblock %}

{% block content_body %}
{% if entities %}

<table class="entity_list">
<thead>
<tr>
    <th>{{ 'Updated' | trans }}</th>
    <th>{{ 'Post' | trans }}</th>
    <th>{{ 'Actions' | trans }}</th>
</tr>
</thead>
<tbody>
{% for comment in entities %}
<tr>
    <td>
        {{ comment.updated | date('d/m/Y H:i:s') }}
    </td>
    <td>
        {{ comment.post.title }}
    </td>
    <td class="actions">
        <ul>
            <li><a href="{{ path('backend_blog_post_edit',{'id':post.id}) }}">{{ 'Edit' | trans }}</a></li>
            <li><a href="{{ path('backend_blog_post_delete',{'id':post.id}) }}">{{ 'Delete' | trans }}</a></li>
        </ul>
    </td>
</tr>
{% endfor %}
</tbody>
</table>

{% else %}

<p>{{ 'No comments found.' | trans }}</p>

{% endif %}

<ul id="entity_list_actions">
    <li><a href="{{ path('backend_blog_post_new') }}">{{ 'Add new Post' | trans }}</a></li>
</ul>


{% endblock %}
