{% extends "KailabBackendBundle::form.html.twig" %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets filter='cssrewrite'
    'bundles/kailabfrontend/css/screenshots.css'
%}
<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
{% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        'bundles/kailabbackend/js/jquery-ui.js'
        'bundles/kailabbackend/js/jquery-ajax_upload.js'
        'bundles/kailabbackend/js/jquery-screenshots.js'
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block form_title %}
{% if entity.id %}
{{ 'Editing App' | trans }}
{% else %}
{{ 'New  App' | trans }}
{% endif %}
{% endblock %}

{% block form_translation %}
    {{ form_row(trans.name) }}
    {{ form_widget(trans.description, {'attr':{'class':'wysiwyg','rows':10,'cols':50}}) }}
    {{ form_rest(trans) }}
{% endblock %}

{% block form_rest %}
{{ form_row(form.url) }}

{{ form_widget(form.screenshots) }}

<script type="text/javascript">
    $(document).ready(function(){
        $('#app_screenshots').screenshots({
        });
    });
</script>

<script type="text/html" id="screenshots_template">
<div class="form_row">
    <h3>{{ 'Selected screenshots' | trans }}</h3>
    <ul class="selected_screenshots screenshots">
    </ul>
</div>
<div class="form_row">
    <h3>{{ 'Available screenshots' | trans }}</h3>
    <ul class="available_screenshots screenshots">
    </ul>
</div>
</script>

<script type="text/html" id="screenshot_template">
<li class="screenshot_small __type___type">
    <div class="screen">
        <img src="{{ path('frontend_screenshot_small',{'id':'__id__'}) }}" />
    </div>
</li>
</script>

{{ parent() }}
{% endblock %}
